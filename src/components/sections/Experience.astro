---
import { work } from "@cv";
import Section from "@/components/Section.astro";
import "@/styles/colors.css";
---

<Section title="Work Experience">
	<ul>
		{
			work.map(
				({
					name,
					startDate,
					endDate,
					position,
					summary,
					highlights,
					url,
				}) => {
					const startYear = new Date(startDate).getFullYear();
					const endYear = endDate ? new Date(endDate).getFullYear() : "Present";

					return (
						<li>
							<article>
								<header>
									<div>
										<h3>
											<a href={url} title={`View ${name}`} target="_blank">
												{name}
											</a>
										</h3>
										<h4>{position}</h4>
									</div>
									<div class="date-range">
										<time datetime={startDate} data-title={startDate}>
											{startYear}
										</time>
										<span class="date-separator">-</span>
										<time datetime={endDate || "Present"} data-title={endDate || "Present"}>
											{endYear}
										</time>
									</div>
								</header>
								<footer>
									<h5>{summary}</h5>
									<div>
										{highlights.map((highlight) => (
											<p>{highlight}</p>
										))}
									</div>
								</footer>
							</article>
						</li>
					);
				},
			)
		}
	</ul>
</Section>

<style>
	div {
		margin-top: 1rem;
	}
	ul {
		display: flex;
		flex-direction: column;
		gap: 16px;
		margin-top: 1.5rem;
		margin-bottom: 1.5rem;
	}

	li {
		display: flex;
		gap: 4px;
	}

	article h3 {
		line-height: 1;
		font-weight: 700;
		margin-block: -0.5rem;
		font-size: 1.1rem;
	}

	article a {
		color: var(--color-text);
	}

	article p {
		font-weight: 300;
		font-size: 0.85rem;
		text-wrap: pretty;
	}

	article a:hover {
		text-decoration: underline;
	}

	article h4 {
		font-size: 1.05rem;
		line-height: 1;
		margin-top: 1rem;
		font-weight: 600;
	}

	article h5 {
		font-weight: 600;
		font-size: 0.9rem;
		text-wrap: pretty;
		color: var(--color-text);
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
	}

	.date-range {
		display: flex;
		align-items: center;
		gap: 2px; /* Reduced from 4px */
		color: var(--color-accent);
		font-size: 0.8rem; /* Increased from 0.75rem */
		font-weight: 600;
		font-style: italic;
		cursor: default;
	}

	time {
		white-space: nowrap;
	}

	.date-separator {
		color: var(--color-accent);
		margin: 0 1px; /* Added small margin */
	}

	[data-title]:hover:after {
		opacity: 1;
		transition: all 0.1s ease-in-out 0.5s;
		visibility: visible;
	}

	[data-title]:after {
		content: attr(data-title);
		background-color: var(--color-accent);
		color: var(--color-text);
		font-size: 0.75rem;
		position: absolute;
		padding: 0.2rem 0.5rem;
		bottom: -1.4rem;
		left: 50%;
		white-space: nowrap;
		box-shadow: 1px 1px 1px var(--color-text);
		opacity: 0;
		border: 1px solid var(--color-text);
		z-index: 99999;
		visibility: hidden;
		border-radius: 6px;
	}

	[data-title] {
		position: relative;
	}

	@media (width <= 700px) {
		time {
			text-align: right;
		}
		.date-range {
			text-align: right;
			font-size: 0.75rem; /* Increased from 0.7rem */
		}
	}
</style>
