---
import { work } from "@cv";
import Section from "@/components/Section.astro";
---

<Section title="Work Experience">
	<ul>
		{
			work.map(
				({
					name,
					startDate,
					endDate,
					position,
					summary,
					highlights,
					url,
				}) => {
					const startYear = new Date(
						startDate,
					).getFullYear();
					const endYear =
						endDate != null
							? new Date(
									endDate,
								).getFullYear()
							: "Actual";

					return (
						<li>
							<article>
								<header>
									<div>
										<h3>
											<a
												href={
													url
												}
												title={`Ver ${name}`}
												target="_blank"
											>
												{
													name
												}
											</a>
										</h3>
										<h4>
											{
												position
											}
										</h4>
									</div>

									<div>
										<time
											datetime={
												startDate
											}
											data-title={
												startDate
											}
										>
											{
												startYear
											}
										</time>
										{
											" - "
										}
										<time
											datetime={
												endDate
											}
											data-title={
												endDate
											}
										>
											{
												endYear
											}
										</time>
									</div>
								</header>

								<footer>
									<p>
										{
											summary
										}
									</p>
									<p>
										{
											highlights
										}
									</p>
								</footer>
							</article>
						</li>
					);
				},
			)
		}
	</ul>
</Section>
<style>
	ul {
		display: flex;
		flex-direction: column;
		gap: 32px;
	}

	article h3 {
		font-weight: 500;
		color: #00bc44;
	}

	article a {
		color: #00bc44;
	}

	article a:hover {
		text-decoration: underline;
	}

	article h4 {
		color: #887850;
		font-weight: 400;
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 4px;
	}

	time {
		color: #e0e0e0;
		font-size: 0.85rem;
		min-width: 102px;
		cursor: default;
	}

	[data-title]:hover:after {
		opacity: 1;
		transition: all 0.1s ease-in-out 0.5s;
		visibility: visible;
	}

	[data-title]:after {
		content: attr(data-title);
		background-color: #887850;
		color: #fff;
		font-size: 0.75rem;
		position: absolute;
		padding: 0.2rem 0.5rem;
		bottom: -1.4rem;
		left: 50%;
		white-space: nowrap;
		box-shadow: 1px 1px 1px #e0e0e0;
		opacity: 0;
		border: 1px solid #000012;
		z-index: 99999;
		visibility: hidden;
		border-radius: 6px;
	}

	[data-title] {
		position: relative;
	}

	@media (width <= 800px) {
		time {
			text-align: right;
		}
	}
</style>
