---
import { work } from "@cv";
import Section from "@/components/Section.astro";
import "@/styles/colors.css";
---

<Section title="Work Experience">
	<ul>
		{
			work.map(
				({
					name,
					startDate,
					endDate,
					position,
					summary,
					highlights,
					url,
				}: {
					name: string;
					startDate: string;
					endDate?: string | null;
					position: string;
					summary: string;
					highlights: string[];
					url: string;
				}) => {
					const startYear = new Date(
						startDate,
					).getFullYear();
					const endYear = endDate
						? new Date(
								endDate,
							).getFullYear()
						: " Present";

					return (
						<li>
							<article>
								<header>
									<div>
										<h3>
											<a
												href={
													url
												}
												title={`View ${name}`}
												target="_blank"
											>
												{
													name
												}
											</a>
										</h3>
										<h4>
											{
												position
											}
										</h4>
									</div>
									<div>
										<time
											datetime={
												startDate
											}
											data-title={
												startDate
											}
										>
											{
												startYear
											}
										</time>
										{
											"-"
										}
										<time
											datetime={
												endDate ||
												" Present"
											}
											data-title={
												endDate ||
												" Present"
											}
										>
											{
												endYear
											}
										</time>
									</div>
								</header>
								<footer>
									<h5>
										{
											summary
										}
									</h5>
									<div>
										{highlights.map(
											(
												highlight,
												index,
											) => (
												<p
													key={
														index
													}
												>
													{
														highlight
													}
												</p>
											),
										)}
									</div>
								</footer>
							</article>
						</li>
					);
				},
			)
		}
	</ul>
</Section>

<style>
	div {
		margin-top: 1rem;
	}
	ul {
		display: flex;
		flex-direction: column;
		gap: 24px;
		margin-top: 1.5rem;
		margin-bottom: 1.5rem;
	}

	article h3 {
		line-height: 1;
		font-weight: 700;
		margin-block: -0.5rem;
	}

	article a {
		color: var(--color-text);
	}

	article p {
		font-weight: 300;
		font-size: 0.85rem;
		text-wrap: pretty;
	}

	article a:hover {
		text-decoration: underline;
	}

	article h4 {
		font-size: 1.15rem;
		line-height: 1;
		margin-top: 1rem;
		font-weight: 600;
	}

	article h5 {
		font-weight: 600;
		font-size: 0.9rem;
		text-wrap: pretty;
		color: var(--color-text);
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
	}

	time {
		color: var(--color-accent);
		font-size: 0.85rem;
		font-weight: 600;
		font-style: italic;
		cursor: default;
		padding-inline: 0.8rem;
	}

	[data-title]:hover:after {
		opacity: 1;
		transition: all 0.1s ease-in-out 0.5s;
		visibility: visible;
	}

	[data-title]:after {
		content: attr(data-title);
		background-color: var(--color-accent);
		color: var(--color-text);
		font-size: 0.75rem;
		position: absolute;
		padding: 0.2rem 0.5rem;
		bottom: -1.4rem;
		left: 50%;
		white-space: nowrap;
		box-shadow: 1px 1px 1px var(--color-text);
		opacity: 0;
		border: 1px solid var(--color-text);
		z-index: 99999;
		visibility: hidden;
		border-radius: 6px;
	}

	[data-title] {
		position: relative;
	}

	@media (width <= 700px) {
		time {
			text-align: right;
		}
	}
</style>
