---
import "@/styles/colors.css";
---

<footer class="no-print">
	<div>
		<h5>Designed & Built by Cello Rondon.</h5>
		<p>Copyright 2024.</p>
	</div>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-evenly;
		background: var(--color-accent);
		bottom: 0;
		margin-top: 1rem;
		padding-block: 0.25rem;
		width: 100%;
	}
	div {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}
	h5,
	p {
		color: var(--color-background);
		line-height: 1.5;
	}
	p {
		margin-bottom: 0.5rem;
		font-size: 0.75rem;
	}
	h5 {
		margin-top: 0.5rem;
	}
</style>
