---
import { basics } from "@cv";
import thumbnailImage from "@/assets/cello_thumbnail.webp";
import "@fontsource/geist-mono/100.css";
import "@fontsource/geist-mono/200.css";
import "@fontsource/geist-mono/300.css";
import "@fontsource/geist-mono/400.css";
import "@fontsource/geist-mono/500.css";
import "@fontsource/geist-mono/600.css";
import "@fontsource/geist-mono/700.css";
import "@fontsource/geist-mono/800.css";
import "@fontsource/geist-mono/900.css";
interface Frontmatter {
    title: string;
    description: string;
    pubDate: string;
    featureImage: string;
    tags: string[];
    links: { [key: string]: string };
}
const { frontmatter } = Astro.props
const { title, description, pubDate, featureImage, tags, links } =
    frontmatter as Frontmatter;
const { image, summary, url } = basics;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <article class="project-article">
      <header>
        <h1>{title}</h1>
        <p class="description">{description}</p>
        <time datetime={pubDate}>
          {new Date(pubDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
      </header>

      <Image
        src={featureImage}
        alt={`Feature image for ${title}`}
        class="feature-image"
      />

      <div class="project-meta">
        {tags && tags.length > 0 && (
          <ul class="tags">
            {tags.map((tag) => (
              <li class="tag">{tag}</li>
            ))}
          </ul>
        )}

        {links && Object.keys(links).length > 0 && (
          <ul class="links">
            {Object.entries(links).map(([name, url]) => (
              <li>
                <a href={url} target="_blank" rel="noopener noreferrer">{name}</a>
              </li>
            ))}
          </ul>
        )}
      </div>

      <div class="project-content">
        <slot />
      </div>
    </article>
  </body>
</html>

<style is:global>
  :root {
    --color-background: #ffffff;
    --color-text: #333333;
    --color-accent: #0077cc;
  }

  html {
    font-family: "GeistMono", monospace;
    font-weight: 400;
    background: var(--color-background);
    color: var(--color-text);
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: var(--color-accent);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  p,
  span {
    text-align: start;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-block: 0.5rem;
    margin-inline: 0;
    text-wrap: pretty;
    padding-inline: 0.8rem;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    padding-left: 0.8rem;
    line-height: 1.5;
    margin-bottom: -0.5rem;
    margin-inline: 0;
  }

  h1 {
    color: var(--color-text);
    font-size: 2rem;
    font-style: bold;
    font-weight: 900;
    text-align: justify;
    line-height: 0.9;
    margin-top: 1rem;
  }

  h2 {
    color: var(--color-accent);
    font-size: 1.5rem;
    font-style: normal;
    font-weight: 600;
    text-align: start;
  }

  h4 {
    color: var(--color-accent);
    font-size: 1.05rem;
    font-style: normal;
    font-weight: 400;
  }
</style>

<style>
  .project-article {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .feature-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .project-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background-color: #f0f0f0;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .project-content {
    line-height: 1.6;
  }

  .description {
    font-style: italic;
    color: var(--color-text);
    opacity: 0.8;
  }

  time {
    display: block;
    font-size: 0.8rem;
    color: var(--color-text);
    opacity: 0.7;
    margin-top: 0.5rem;
  }
