---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "@fontsource/geist-mono/100.css";
import "@fontsource/geist-mono/200.css";
import "@fontsource/geist-mono/300.css";
import "@fontsource/geist-mono/400.css";
import "@fontsource/geist-mono/500.css";
import "@fontsource/geist-mono/600.css";
import "@fontsource/geist-mono/700.css";
import "@fontsource/geist-mono/800.css";
import "@fontsource/geist-mono/900.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cello's Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "GeistMono", monospace;
		font-weight: 300;
		background: #000012;
		color: #e0e0e0;
		letter-spacing: -0.025rem;
	}
	body,
	figure {
		margin: 0;
	}
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
	p,
	span {
		text-align: start;
		font-size: 0.95rem;
		line-height: 1.5;
		margin-block: 0.5rem;
		margin-inline: 0;
		text-wrap: pretty;
		padding-inline: 0.8rem;
	}
	h1,
	h2,
	h3,
	h4 {
		padding-inline: 0.8rem;
		line-height: 1.75;
		padding-inline: 0.8rem;
		margin-bottom: -0.5rem;
		margin-inline: 0;
	}
	h1 {
		color: #00bc44;
		font-size: 2rem;
		font-style: bold;
		font-weight: 900;
		/* text-align: center; */
		line-height: 0.9;
		margin-top: 1rem;
	}
	h2 {
		color: #887850;
		font-size: 1.5rem;
		font-style: normal;
		font-weight: 600;
		text-align: start;
	}
	footer {
		display: flex;
		align-items: center;
		justify-content: center;
		background: #00bc44;
		text-align: center;
		color: #000012;
		padding: 0;
		position: absolute;
		bottom: 0;
		width: 100%;
	}
</style>
